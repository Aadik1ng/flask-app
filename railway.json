{
  "name": "my-flask-app",
  "buildCommand": "python -m spacy download en_core_web_lg",
  "builds": [
    { "src": "main.py", "use": "@railway/python" }
  ],
  "routes": [
    { "src": "/", "dest": "main.py" }
  ],
  "env": {
    "FLASK_ENV": "production",
    "SPACY_WARNING_IGNORE": "W008"
  },
  "expose": ["8080"],
  "addons": {
    "gunicorn": "latest"
  }
}
